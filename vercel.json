{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/client/build/index.html" }
  ],
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    { "src": "api/server.js", "use": "@vercel/node" }
  ],
  "outputDirectory": "client/build"
} 